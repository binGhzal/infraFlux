[Unit]
Description=Lightweight Kubernetes
Documentation=https://k3s.io
Wants=network-online.target
After=network-online.target

[Install]
WantedBy=multi-user.target

[Service]
Type=notify
KillMode=process
Delegate=yes
LimitNOFILE=infinity
LimitNPROC=infinity
LimitCORE=infinity
TasksMax=infinity
TimeoutStartSec=0
Restart=always
RestartSec=5s
ExecStartPre=-/sbin/modprobe br_netfilter
ExecStartPre=-/sbin/modprobe overlay
{% if k3s_cluster_init | default(false) %}
ExecStart=/usr/local/bin/k3s server \
  --cluster-init \
  --tls-san={{ k3s_master_ip }} \
  --tls-san={{ ansible_default_ipv4.address }} \
  --node-ip={{ ansible_default_ipv4.address }} \
  --node-external-ip={{ ansible_default_ipv4.address }} \
  --flannel-iface=eth0 \
  --disable traefik \
  --disable servicelb \
  --disable local-storage \
  --kubelet-arg="node-labels=node-role=master" \
  --kubelet-arg="node-taints=node-role=master:NoSchedule"
{% else %}
ExecStart=/usr/local/bin/k3s server \
  --server https://{{ k3s_master_ip }}:6443 \
  --token={{ k3s_token }} \
  --tls-san={{ k3s_master_ip }} \
  --tls-san={{ ansible_default_ipv4.address }} \
  --node-ip={{ ansible_default_ipv4.address }} \
  --node-external-ip={{ ansible_default_ipv4.address }} \
  --flannel-iface=eth0 \
  --disable traefik \
  --disable servicelb \
  --disable local-storage \
  --kubelet-arg="node-labels=node-role=master" \
  --kubelet-arg="node-taints=node-role=master:NoSchedule"
{% endif %}