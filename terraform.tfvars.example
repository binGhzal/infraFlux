# Proxmox API Configuration
proxmox_api_url = "https://your-proxmox-host:8006/api2/json"
proxmox_node = "your-proxmox-node"
proxmox_api_token_id = "root@pam!terraform"
proxmox_api_token_secret = "your-api-token-secret"

# Template Configuration
template_name = "ubuntu-cloud-init-template"
template_vm_id = 9000

# SSH Configuration
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2E... your-ssh-key"

# Network Configuration
network_gateway = "192.168.30.1"

# Kubernetes Master Node Configuration
kubernetes_master = {
  ip = "192.168.30.100/24"
}

# Kubernetes Worker Nodes Configuration
kubernetes_workers = {
  ip_start = 101
}

# Network Interface Configuration
network_config = {
  bridge = "vmbr0"
  subnet = "192.168.30.0/24"
  gateway = "192.168.30.1"
}